<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://passportEdit.caption"
        focusComponent="form"
        messagesPack="com.brhouselab.brc.web.screens.department.metrology.passport">
    <data>
        <instance id="passportDc"
                  class="com.brhouselab.brc.entity.department.metrology.Passport">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="passportDc">
            <column width="350px">
                <textField id="numberField" property="number"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
